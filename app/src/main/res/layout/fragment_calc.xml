<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="25dp">

        <TextView
            android:id="@+id/tv_berat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/berat"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/tv_tinggi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_berat"
            android:layout_marginTop="40dp"
            android:text="@string/tinggi"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/et_berat"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:layout_alignBaseline="@id/tv_berat"
            android:layout_toRightOf="@id/tv_berat"
            android:layout_marginLeft="10dp" />


        <EditText
            android:id="@+id/et_tinggi"
            android:inputType="number"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@id/tv_tinggi"
            android:layout_toRightOf="@id/tv_tinggi"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/tv_kg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="kg"
            android:textSize="20sp"
            android:layout_alignBaseline="@id/et_berat"
            android:layout_toRightOf="@id/et_berat"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/tv_cm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_berat"
            android:layout_marginTop="40dp"
            android:text="cm"
            android:textSize="20sp"
            android:layout_alignBaseline="@id/et_tinggi"
            android:layout_toRightOf="@id/et_tinggi"
            android:layout_marginLeft="10dp" />

        <Button
            android:id="@+id/btn_check"
            android:layout_below="@id/tv_tinggi"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/calc"
            android:background="@color/colorAccentDark"
            android:textColor="@android:color/white"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@id/btn_check"
            android:layout_marginTop="40dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/yourweight"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorAccent"
                    android:textSize="17sp" />
                <TextView
                    android:id="@+id/yourheight"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorAccent"
                    android:textSize="17sp"/>
                <TextView
                    android:id="@+id/yourbmi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorAccent"
                    android:textSize="17sp"/>
                <TextView
                    android:id="@+id/yourcategory"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorAccent"
                    android:textSize="17sp"/>
                <TextView
                    android:id="@+id/yourideal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorAccent"
                    android:textSize="17sp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="15dp">
                <TextView
                    android:id="@+id/yourweight2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorAccent"
                    android:textSize="17sp"/>
                <TextView
                    android:id="@+id/yourheight2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorAccent"
                    android:textSize="17sp"/>
                <TextView
                    android:id="@+id/yourbmi2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorAccent"
                    android:textSize="17sp"/>
                <TextView
                    android:id="@+id/yourcategory2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorAccent"
                    android:textSize="17sp"/>
                <TextView
                    android:id="@+id/yourideal2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:textColor="@color/colorAccent"
                    android:textSize="17sp"/>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</FrameLayout>