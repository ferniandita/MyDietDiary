<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <Button
        android:id="@+id/btn_diet1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Diet Mayo"
        android:background="@null"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/tv_diet1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/btn_diet2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Diet Paleo"
        android:background="@null"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/tv_diet2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/btn_diet3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Diet Alkaline"
        android:background="@null"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/tv_diet3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/btn_diet4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Food combining"
        android:background="@null"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/tv_diet4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"/>

    <Button
        android:id="@+id/btn_diet5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Clean eating"
        android:background="@null"
        android:textColor="@color/colorAccent"/>

    <TextView
        android:id="@+id/tv_diet5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"/>
</LinearLayout>